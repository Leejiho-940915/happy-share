<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="ComBoardMapper">
  
  <resultMap type="CommBoardDTO" id="CommBoardDTOMap">
    <id column="vol_board_no" property="no"/> 
    <result column="title" property="title"/>
    <result column="content" property="content"/>
    <result column="created_dt" property="registeredDate"/>
    <result column="view_cnt" property="viewCount"/>
    <result column="vol_board_file_no" property="fileUpload"/>
   <!-- <result column="like" property="viewCount"/>--> 

  <association property="owner" javaType="joinDTO">
    <id column="user_no" property="no"/>
    <result column="id" property="id"/> 
  </association>  
  
  <asspciation

  </resultMap>
  
  <select id="findAll" resultMap="CommBoardDTOMap">
   select 
     vol_board_no,
     user_no,
     title,
     created_dt,
     view_cnt
    from
     ftp_vol_board
    order by vol_board_no desc
  </select>
  
    <!--
  <insert id="insert" parameterType="CommBoardDTOMap">
    insert into ftp_support_(title,content,created_dt) 
    values(#{title},#{content}, curdate())
  </insert>
  --> 
  
  
   <update id="update" parameterType="CommBoardDTOMap">
   update ftp_vol_board set
     title=#{title},
     content=#{content}
   where 
      vol_board_no=#{no}
  </update>
  
  
  
   <delete id="delete" parameterType="int">
    delete from ftp_vol_board where vol_board_no=${values}
  </delete>
  
  
  
  <select id="findByCommBoardNo" resultMap="CommBoardDTOMap" parameterType="int">
     select 
     vol_board_no,
     user_no,
     title,
     content,
     created_dt,
     view_cnt
    from
     ftp_vol_board
    where 
      vol_board_no=#{values}
  </select>
  
  <select id="findByKeyword" resultMap="CommBoardDTOMap" parameterType="string">
   
    select 
     vol_board_no,
     user_no,
     title,
     created_dt,
     view_cnt
    from
     ftp_vol_board
     <where>
      <if test="title != null">
         title like concat('%', #{value}, '%')
      </if>
      <if test="content != null">
         or content like concat('%', #{value}, '%') 
      </if>
     </where>
     order by _no desc
  </select>
  
  
  
  
